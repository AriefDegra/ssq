<?xml version="1.0" encoding="UTF-8"?>
<project name="ssq" default="all">
  
  
  <property file="ssq.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module ssq -->
  
  <dirname property="module.ssq.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.ssq" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ssq" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ssq" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ssq" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="ssq.output.dir" value="${module.ssq.basedir}/out/production/ssq"/>
  <property name="ssq.testoutput.dir" value="${module.ssq.basedir}/out/test/ssq"/>
  
  <path id="ssq.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ssq.module.production.classpath">
    <path refid="${module.jdk.classpath.ssq}"/>
    <fileset dir="${basedir}/library/pdfbox">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/library/commons-logging-1.2">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="ssq.runtime.production.module.classpath">
    <pathelement location="${ssq.output.dir}"/>
    <fileset dir="${basedir}/library/pdfbox">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/library/commons-logging-1.2">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="ssq.module.classpath">
    <path refid="${module.jdk.classpath.ssq}"/>
    <pathelement location="${ssq.output.dir}"/>
    <fileset dir="${basedir}/library/pdfbox">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/library/commons-logging-1.2">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="ssq.runtime.module.classpath">
    <pathelement location="${ssq.testoutput.dir}"/>
    <pathelement location="${ssq.output.dir}"/>
    <fileset dir="${basedir}/library/pdfbox">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/library/commons-logging-1.2">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.ssq">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ssq">
    <patternset refid="excluded.from.module.ssq"/>
  </patternset>
  
  <path id="ssq.module.sourcepath">
    <dirset dir="${module.ssq.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ssq" depends="compile.module.ssq.production,compile.module.ssq.tests" description="Compile module ssq"/>
  
  <target name="compile.module.ssq.production" depends="register.custom.compilers" description="Compile module ssq; production classes">
    <mkdir dir="${ssq.output.dir}"/>
    <javac2 destdir="${ssq.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ssq}/javac">
      <compilerarg line="${compiler.args.ssq}"/>
      <bootclasspath refid="ssq.module.bootclasspath"/>
      <classpath refid="ssq.module.production.classpath"/>
      <src refid="ssq.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ssq"/>
    </javac2>
    
    <copy todir="${ssq.output.dir}">
      <fileset dir="${module.ssq.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ssq.tests" depends="register.custom.compilers,compile.module.ssq.production" description="compile module ssq; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ssq" description="cleanup module">
    <delete dir="${ssq.output.dir}"/>
    <delete dir="${ssq.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.ssq" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.ssq" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>